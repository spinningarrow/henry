{
  "name": "henry",
  "version": "0.0.1",
  "description": "Front-end for Jekyll blogs",
  "main": "index.js",
  "scripts": {
    "prebuild:css": "mkdir -p build/css/",
    "build:css": "cat css/base.css css/components.css css/state.css > build/css/main.css",
    "prebuild:js": "mkdir -p build/js",
    "build:js": "browserify -o build/js/app.js js/app.js",
    "build": "npm run build:css & npm run build:js",
    "clean": "rm -rf build",
    "start": "http-server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:css": "watch 'npm run build:css' css/",
    "prewatch:js": "npm run prebuild:js",
    "watch:js": "watchify -vo build/js/app.js js/app.js",
    "watch": "npm run watch:css & npm run watch:js"
  },
  "author": "Sahil Bajaj",
  "license": "MIT",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "js-yaml": "^3.2.6",
    "marked": "^0.3.3",
    "moment": "^2.9.0",
    "normalize-css": "^2.3.1",
    "qwest": "^1.5.4",
    "react": "^0.14.1",
    "react-dom": "^0.14.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.0.14",
    "babel-preset-react": "^6.0.14",
    "babelify": "^7.1.0",
    "browserify": "^8.1.3",
    "http-server": "^0.8.5",
    "watch": "^0.16.0",
    "watchify": "^2.3.0"
  }
}
